  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "dependencies": {
    "@sthira/core": "workspace:*"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.2.0",
    "jsdom": "^24.0.0",
    "react": "^18.2.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
